<section class="container" id="js-usuario">
   
    <button class="btn btn-success mb-0" id="btnNovoUsuario" data-toggle="modal" data-target="#modal-usuario"><i class="fas fa-plus"></i> Novo Usuário</button>

    <div class="card">
        <div class="card-header table-header mb-3 bg-mcm"><i class="fas fa-users" style='font-size:22px'></i> Usuários</div>
        <div class="card-body ">   
            <div class="table-responsive">      
                <table class="table table-hover" id="tableUsuarios">
                    <thead class="bg-light-gray  text-mcm text-uppercase ">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Sigla</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Setor</th>
                            <th scope="col">Status</th>
                            <th scope="col" >Ações</th>
                        </tr>
                    </thead>
                    <tbody>                      
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
</section>

   <!-- Modal Usuario -->
    <div class="modal fade" id="modal-usuario" tabindex="-1" role="dialog" aria-labelledby="modalUsuario" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-white text-uppercase font-weight-bold" id="modalUsuario">Usuário</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">                    
                    <form id="formUsuario" novalidate autocomplete="off">
                        <div class="row">
                            <div class="form-group col-12">
                                <label for="nome">Nome:</label>
                                <input type="text" name="nome" id="nome" placeholder="Digite o nome" class="form-control" required maxlength="30" minlength="3" >
                                <input type="hidden" name="id" id="id">
                                <div class="invalid-feedback">Digite um nome válido.</div>
                            </div>
                            <div class="form-group col-12">
                                <label for="sigla">Sigla:</label>
                                <input type="text" name="sigla" id="sigla" placeholder="Digite sua sigla" class="form-control" required maxlength="5" minlength="2" >
                                <div class="invalid-feedback">Digite uma sigla válida.</div>
                            </div>
                             <div class="form-group col-12">
                                <label for="login">Login:</label>
                                <input type="text" name="loginUsuario" id="login" placeholder="Digite seu login" class="form-control" required maxlength="20" minlength="2" >
                                <div class="invalid-feedback">Digite um login válido.</div>
                            </div>
                             <div class="form-group col-12">
                                <label for="sigla">Senha:</label>
                                <input type="password" name="senha" id="senha" placeholder="Digite sua senha" class="form-control" required maxlength="8" minlength="3" >
                                <div class="invalid-feedback">Digite uma senha válida.</div>
                            </div>
                            <div class="form-group col-12">
                                <label for="setor">Setor:</label>
                                <select id="setor" class="form-control"></select>
                            </div>
                           
                            <div class="form-group col-12 js-status">
                                <label for="status">Status:</label>
                                <select class="form-control" name="status"  id="status">
                                    <option value="0" selected>Normal</option>
                                    <option value="1">Bloqueado</option>
                                    <option value="2">Excluído</option>
                                </select>
                            </div>
                            <div class="col-12 text-right py-1">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="far fa-times-circle"></i> Cancelar</button>
                                <button type="submit" ><i class="far fa-save"></i> Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Usuario-->


    
   <!-- Modal Exclusão -->   
    <div class="modal fade" id="modal-usuario-exclusao" tabindex="-1" role="dialog" aria-labelledby="modal-usuario-exclusao" aria-hidden="true">
        <form id="formExcluirUsuario" novalidate >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white ">
                    <h5 class="modal-title text-uppercase font-weight-bold" id="modal-usuario-exclusao"><i class="fas fa-trash-alt"></i> Excluir usuário</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">     
                    <div class="row">            
                        <div class="form-group col-12">
                            <p>Deseja excluir o usuário <b class="usuario-nome"></b>?</p>
                            <input type="hidden" name="id">
                        </div>                        
                        <div class="col-12 text-right py-1">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="far fa-times-circle"></i> Cancelar</button>
                            <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i> Excluir</button>
                         </div>
                    </div>
                  
                </div>
            </div>
        </div>
        </form>
    </div>
    <!-- Modal -->

