<section class="container" id="js-setor">
   
    <button class="btn btn-success mb-0" id="btnNovoSetor" data-toggle="modal" data-target="#modal-setor"><i class="fas fa-plus"></i> Novo Setor</button>

    <div class="card">
        <div class="card-header table-header mb-3 bg-mcm"><i class="far fa-building" style='font-size:22px'></i> Setores</div>
        <div class="card-body ">   
            <div class="table-responsive">      
                <table class="table table-hover" id="tableSetores">
                    <thead class="bg-light-gray  text-mcm text-uppercase ">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Usuários</th>
                            <th scope="col" >Status</th>
                            <th scope="col" >Ações</th>
                        </tr>
                    </thead>
                    <tbody>                      
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
</section>

   <!-- Modal Setor -->
    <div class="modal fade" id="modal-setor" tabindex="-1" role="dialog" aria-labelledby="modalSetor" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-white text-uppercase font-weight-bold" id="modalSetor">Setor</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">                    
                    <form id="formSetor" novalidate autocomplete="off">
                        <div class="row">
                            <div class="form-group col-12">
                                <label for="nome">Nome:</label>
                                <input type="text" name="nome" id="nome" placeholder="Digite o nome" class="form-control" required maxlength="30" minlength="3" >
                                <input type="hidden" name="id" id="id">
                                <div class="invalid-feedback">Digite um nome de 3 até 30 caracteres. (Apenas letras)</div>
                            </div>
                            <div class="form-group col-12 js-status">
                                <label for="status">Status:</label>
                                <select class="form-control" name="status"  id="status">
                                    <option value="0" selected>Normal</option>
                                    <option value="1">Bloqueado</option>
                                    <option value="2">Excluído</option>
                                </select>
                            </div>
                            <div class="col-12 text-right py-1">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="far fa-times-circle"></i> Cancelar</button>
                                <button type="submit" ><i class="far fa-save"></i> Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Setor-->


    
   <!-- Modal Exclusão -->   
    <div class="modal fade" id="modal-setor-exclusao" tabindex="-1" role="dialog" aria-labelledby="modal-setor-exclusao" aria-hidden="true">
        <form id="formExcluirSetor" novalidate >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white ">
                    <h5 class="modal-title text-uppercase font-weight-bold" id="modal-setor-exclusao"><i class="fas fa-trash-alt"></i> Excluir setor</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">     
                    <div class="row">            
                        <div class="form-group col-12">
                            <p>Deseja excluir o setor <b class="setor-nome"></b>?</p>
                            <input type="hidden" name="id">
                        </div>                        
                        <div class="col-12 text-right py-1">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="far fa-times-circle"></i> Cancelar</button>
                            <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i> Excluir</button>
                         </div>
                    </div>
                  
                </div>
            </div>
        </div>
        </form>
    </div>
    <!-- Modal -->

